@using LearnKendoUiAspMvc.Models

@{ Layout = null; }


@(Html.Kendo().Grid<Invoice>()
    .Name("EmployeeSales")
    .Columns(columns =>
    {
        columns.Bound(c => c.CustomerName);
        columns.Bound(c => c.OrderDate).Format("{0:MM/dd/yyyy}");
        columns.Bound(c => c.ProductName);
        columns.Bound(c => c.UnitPrice);
        columns.Bound(c => c.Quantity);
        columns.Bound(c => c.Salesperson);
        columns.Command(command => {
                                       command.Edit();
        });
    })
    .ToolBar(toolbar => {
                            toolbar.Excel();
                            toolbar.Pdf();
    })
    .Pageable()
    .Sortable(sortable => {
                              sortable.SortMode(GridSortMode.SingleColumn);
    })
    .Scrollable(scrollable => scrollable.Enabled(false))
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model =>
          {
              model.Id(invoice => invoice.OrderID);
              model.Field(field => field.OrderID).Editable(false);
          })
          .Read(read => read.Action("InvoicesRead", "Invoice")
          .Data("getEmployeeFilter"))
          .Update(create => create.Action("UpdateInvoice", "Invoice"))
    )
    .AutoBind(false))
